{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current file",
            "command": "zig",
            "args": ["cc", "-o", "christmas.exe", "${file}"],
            "problemMatcher": "$zig",
            "type": "shell",
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}